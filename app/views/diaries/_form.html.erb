<%= form_with(model: @diary, local: true) do |form| %>
    <div class="date">
        <%= form.label :start_time %>
        <%= form.date_select :start_time %>
    </div>
    <div class="title">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class="content">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </div>

    <div class="submit">
        <%= form.submit %>
    </div>
<% end %>