<h1>ユーザー登録</h1>

<div>
    <%= form_for(@user, url: signup_path ) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit "OK", root_path %>
    <% end %>
</div>