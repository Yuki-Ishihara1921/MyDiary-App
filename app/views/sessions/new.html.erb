<div class="page-form">
    <div class="form-flame">
        <span class="logo">MyDiary</span>

        <p><%= notice %></p>
        <div class="">
            <div class="">
                <%= form_for(:session, url: login_path) do |form| %>

                    <%= form.text_field :name, class: 'form form-control', placeholder: 'ユーザー名' %>
                    <%= form.password_field :password, class: 'form form-control', placeholder: 'パスワード' %>
                    <%= form.label :remember_me, class: 'form' do %>
                        <%= form.check_box :remember_me %>
                        <span>ログイン状態を保持</span>
                    <% end %>
                    <br>
                    <%= form.submit "ログイン", class: "form btn btn-primary" %>
                <% end %>

                <p class="form"><%= link_to "ユーザー作成はこちら", signup_path %></p>
            </div>
        </div>
    </div>
</div>