<div class="auth__container">
    <span class="logo">MyDiary</span>
    <% if notice %>
        <p class="text-danger"><%= notice %></p>
    <% end %>
    <div class="m-2">
        <%= form_with model: @user, url: signup_path, local: true do |f| %>
            <div class="d-flex">
                <p><%= icon("person-circle", class: "me-2") %></p>
                <%= f.text_field :name, class: 'form-control mb-3', placeholder: 'ユーザー名' %>
            </div>
            <div class="d-flex">
                <p><%= icon("envelope", class: "me-2") %></p>
                <%= f.email_field :email, class: 'form-control mb-3', placeholder: 'メールアドレス' %>
            </div>
            <div class="d-flex">
                <p><%= icon("lock-fill", class: "me-2") %></p>
                <%= f.password_field :password, class: 'form-control mb-3', placeholder: 'パスワード' %>
            </div>
            <div class="d-flex">
                <p><%= icon("lock-fill", class: "me-2") %></p>
                <%= f.password_field :password_confirmation, class: 'form-control mb-3', placeholder: 'パスワード再入力' %>
            </div>
            <%= f.submit 'アカウント登録', class: 'btn btn-primary mb-2', data: { confirm: 'こちらの内容でアカウントを登録しますか？' } %>
        <% end %>
    </div>
    <%= link_to 'ログインに戻る', signin_path %>
</div>